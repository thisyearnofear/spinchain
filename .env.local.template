# ============================================
# SPINCHAIN ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# ============================================
# EVM (Avalanche Fuji) - Fill after Remix deployment
# ============================================
NEXT_PUBLIC_AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# Deploy these in Remix in order:
# 1. SPINToken -> paste address here
NEXT_PUBLIC_SPIN_TOKEN_ADDRESS=0x

# 2. IncentiveEngine -> paste address here  
NEXT_PUBLIC_INCENTIVE_ENGINE_ADDRESS=0x

# 3. ClassFactory -> paste address here
NEXT_PUBLIC_CLASS_FACTORY_ADDRESS=0x

# 4. EffortThresholdVerifier (optional, for ZK) -> paste address here
NEXT_PUBLIC_EFFORT_THRESHOLD_VERIFIER_ADDRESS=0x

# Your deployer wallet (for instructor functions)
NEXT_PUBLIC_DEPLOYER_ADDRESS=0x

# ============================================
# SUI (Testnet) - Fill after CLI deployment
# ============================================
# Your Sui wallet address from `sui client addresses`
SUI_WALLET_ADDRESS=0x

# Your Sui private key (keep secret!)
SUI_PRIVATE_KEY=

# Package ID from `sui client publish` output
NEXT_PUBLIC_SUI_PACKAGE_ID=0x

# Example session object ID (created after first test session)
NEXT_PUBLIC_SUI_EXAMPLE_SESSION_ID=0x

# ============================================
# AI Services (optional - uses defaults if not set)
# ============================================
# Get from Google AI Studio: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# ============================================
# Walrus Storage (optional - uses mock if not set)
# ============================================
# Walrus publisher node URL
NEXT_PUBLIC_WALRUS_PUBLISHER_URL=https://publisher.walrus-testnet.walrus.space

# Walrus aggregator node URL  
NEXT_PUBLIC_WALRUS_AGGREGATOR_URL=https://aggregator.walrus-testnet.walrus.space

# ============================================
# Subgraph (optional - uses mock data if not set)
# ============================================
NEXT_PUBLIC_SUBGRAPH_URL=
